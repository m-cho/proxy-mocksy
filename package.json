{
  "name": "proxy-mocksy",
  "description": "Local mock server with both VS Code extension and CLI support, featuring JSON configuration, tree view management, and dynamic response templates.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:all": "turbo run build",
    "build:graph": "turbo run graph",

    "### Core commands ###": "",
    "core:build": "turbo @proxy-mocksy/core#build",
    "core:clean": "turbo @proxy-mocksy/core#clean",

    "### CLI Commands ###": "",
    "cli:start": "turbo @proxy-mocksy/cli#start",
    "cli:start:withExample": "turbo @proxy-mocksy/cli#start -- --config ../../examples/config/proxy-mocksy.config.json",
    "cli:build": "turbo @proxy-mocksy/cli#build",
    "cli:clean": "turbo @proxy-mocksy/cli#clean",

    "### Deno Testing ###": "",
    "deno:test:cli": "cd packages/cli && npm run deno:test",
    "deno:test:cli:withExample": "cd packages/cli && npm run deno:test:config",

    "### VSCode Extension": "",
    "vscode-extension:build": "turbo @proxy-mocksy/vscode-extension#build",
    "vscode-extension:watch": "turbo run watch --filter=@proxy-mocksy/vscode-extension",

    "### JSR Publishing ###": "",
    "jsr:publish:core": "turbo jsr:publish --filter=@proxy-mocksy/core",
    "jsr:publish:cli": "turbo jsr:publish --filter=@proxy-mocksy/cli",
    "jsr:publish:all": "turbo jsr:publish",
    "jsr:publish-only:core": "turbo jsr:publish-only --filter=@proxy-mocksy/core",
    "jsr:publish-only:cli": "turbo jsr:publish-only --filter=@proxy-mocksy/cli",
    "jsr:dry-run:all": "turbo jsr:dry-run",
    "jsr:dry-run-only:core": "turbo jsr:dry-run-only --filter=@proxy-mocksy/core",
    "jsr:dry-run-only:cli": "turbo jsr:dry-run-only --filter=@proxy-mocksy/cli",
    "jsr:sync-versions": "./sync-jsr-versions.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m-cho/proxy-mocksy.git"
  },
  "author": "Milan Stojimirov",
  "bugs": {
    "url": "https://github.com/m-cho/proxy-mocksy/issues"
  },
  "homepage": "https://github.com/m-cho/proxy-mocksy#readme",
  "packageManager": "npm@10.8.2",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  }
}
