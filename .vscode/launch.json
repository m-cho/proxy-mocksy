{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"
			],
			"outFiles": [
				"${workspaceFolder}/packages/vscode-extension/out/**/*.js"
			],
			"preLaunchTask": "npm: build:vscode-extension"
		}
	]
}